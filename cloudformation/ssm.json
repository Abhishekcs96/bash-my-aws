{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "ec2Test": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "IamInstanceProfile": {"Ref": "iamipTestProfile"},
        "ImageId": "ami-afd15ed0",
        "InstanceType": "t3.nano",
        "SecurityGroupIds": [{"Ref": "ec2sgAllowVPC"}],
        "SubnetId": "subnet-07xxxxxxxxxxx",
        "Tags": [
          {"Key": "Name", "Value": "TestInstance"}
        ]
      }
    },
    "ec2sgAllowVPC": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "VpcId": "vpc-073ccxxxxxxxxxxxx",
        "SecurityGroupIngress": [],
        "SecurityGroupEgress": []
      }
    },
    "iamipTestProfile": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {"Path": "/", "Roles": [{"Ref": "iamrTestRole"}]}
    },
    "iamrTestRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "ManagedPolicyArns": ["arn:aws:iam::aws:policy/AmazonSSMManagedInstanceCore"],
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {"Effect": "Allow", "Principal": {"Service": ["ec2.amazonaws.com"]}, "Action": ["sts:AssumeRole"]}
          ]
        }
      }
    }
  }
}